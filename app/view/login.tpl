<div class="container">
    <div class="one-half column">
        <h4>Login</h4>
        <p>Enter your data to login.</p>
        <form name="login_form" id="login" method="post" action="login">
            <div class="row">
                <div class="u-full-width">
                    <label for="emailInput">Your email</label>
                    <input class="u-full-width" placeholder="yourmail@mailbox.com" id="emailInput" type="email" name="email">
                    <label for="passwordInput">Your password</label>
                    <input class="u-full-width" id="passwordInput" type="password" name="password">
                </div>
            </div>
            <input class="button-primary" value="Submit" type="submit">
        </form>
    </div>
</div>
